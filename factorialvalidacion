// factorialvalidacion.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "stdlib.h"

using namespace std;

void main()

{
	int i,n,factorial;
	//validar el ingrese de valores correctos a n
	do{
		do{
		cout<<"Ingrese el valor de n: ";
		cin>>n;
		
	}while (n<0);

	factorial=1;

	for(i=2;i<=n;i++)
		factorial=factorial*i;
	cout<<"el factorial de " <<n<< " es: "<<factorial<<endl;
	getch();
	system ("cls");
	}while(n!=0);
		

}
