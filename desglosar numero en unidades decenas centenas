// dividir numero.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;

void main ()
{
	int n,u,d,c,um;
	cout<<"introduzca el numero: ";
	cin>>n;

	u=n%10;
	d=((n%100)-u)/10;
	c=((n%1000)-u-d)/100;
	um=((n%10000)-c-d-u)/1000;
	cout<<"Son: "<<u<<" unidades"<<endl;
	cout<<"Son; "<<d<<" decenas"<<endl;
	cout<<"Son: "<<c<<" centenas"<<endl;
	cout<<"Son: "<<um<<" unidades de mil"<<endl;

	getch();
}
